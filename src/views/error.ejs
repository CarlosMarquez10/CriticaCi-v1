<%- include('partials/header', { title: 'Error' }) %>

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4><i class="fas fa-exclamation-triangle me-2"></i>Error</h4>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Ha ocurrido un error</h5>
                    <p class="card-text"><%= message %></p>
                    <% if (error && error.status) { %>
                        <p><strong>Estado:</strong> <%= error.status %></p>
                    <% } %>
                    <% if (process.env.NODE_ENV !== 'production' && error && error.stack) { %>
                        <div class="mt-4">
                            <h6>Detalles t√©cnicos:</h6>
                            <pre class="bg-light p-3 rounded"><code><%= error.stack %></code></pre>
                        </div>
                    <% } %>
                    <a href="/" class="btn btn-primary mt-3">
                        <i class="fas fa-home me-2"></i>Volver al inicio
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>